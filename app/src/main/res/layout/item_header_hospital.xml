<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/index_header_siv_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="30dp"
        tools:src="@drawable/classroom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/index_header_tv_h_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:maxLines="1"
            android:textColor="#404040"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="成都第十八中医院" />

        <TextView
            android:id="@+id/index_header_tv_h_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="成都第十八中医院成都第十八中医院成都第十八中医院成都第十八中医院成都第十八中医院成都第十八中医院成都第十八中医院成都第十八中医院成都第十八中医院成都第十八中医院" />


    </LinearLayout>


</LinearLayout>
