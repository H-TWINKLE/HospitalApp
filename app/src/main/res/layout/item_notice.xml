<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_click"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.loopj.android.image.SmartImageView
            android:id="@+id/notice_siv_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/dp_10"
            tools:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                tools:text="张三管理员" />

            <TextView
                android:id="@+id/notice_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#315b9f"
                tools:text="张三管理员" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_title" />

            <TextView
                android:id="@+id/opinion_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#363535"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="张三管理员" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="3dp"
                android:contentDescription="@null"
                android:src="@drawable/icon_content" />


            <TextView
                android:id="@+id/opinion_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#363535"
                android:textSize="16sp"
                tools:text="张三管理员" />
        </LinearLayout>


    </LinearLayout>


    <include
        layout="@layout/base_div_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp" />


</LinearLayout>
